@page
@model MegadeskWebApp.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.FullName" class="control-label"></label>
                <input placeholder="Rick Smith" asp-for="DeskQuote.FullName" class="form-control" />
                <span asp-validation-for="DeskQuote.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.NumDrawers" class="control-label"></label>
                <input placeholder="Must be a number between 0-7" asp-for="DeskQuote.NumDrawers" class="form-control" />
                <span asp-validation-for="DeskQuote.NumDrawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Width" class="control-label"></label>
                <input placeholder="Must be a number between 24-96" asp-for="DeskQuote.Width" class="form-control" />
                <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Depth" class="control-label"></label>
                <input placeholder="Must be a number between 12-48" asp-for="DeskQuote.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.SurfaceMaterial" class="control-label"></label>
                <br />  
                <select asp-for="DeskQuote.SurfaceMaterial" asp-items="Model.Materials">
                    <option value=""></option>
                </select>
                <span asp-validation-for="DeskQuote.SurfaceMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.RushDays" class="control-label"></label>
                <input placeholder="Enter 3|5|7|14" asp-for="DeskQuote.RushDays" class="form-control" />
                <span asp-validation-for="DeskQuote.RushDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Date" class="control-label"></label>
                <input type="datetime" asp-for="DeskQuote.Date" class="form-control" value="@DateTime.Now.ToString("MM/dd/yyyy")" />
                @*<span asp-validation-for="DeskQuote.Date" class="text-danger"></span>*@
            </div>
            @*<div class="form-group">
                <label asp-for="DeskQuote.Total" class="control-label"></label>
                <input asp-for="DeskQuote.Total" class="form-control" />
                <span asp-validation-for="DeskQuote.Total" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
